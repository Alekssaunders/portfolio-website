---
const navbar = [
    {
        href: "/",
        name: "home",
    },
    {
        href: "/about",
        name: "about",
    },
];
---

<div class="navLinkContainer">
    {
        navbar.map((navbar) => (
                <ul>
                    <li class="navList">
                        <a class="navLink" href={navbar.href}>
                            {navbar.name}
                        </a>
                    </li>
                </ul>
        ))
    }
</div>

<style>
    .navListContainer {
        grid-area: 1 / 2;
    }

    .navList {
        list-style: none;
        font-size: 112.5%;
        padding-top: var(--spacer-l);
    }

    .navLink {
        color: #cbd5e0;
        text-decoration: none;
        transition: all 500ms;
    }

    .navLink:hover {
        color: #ffa9b7;
        font-size: 150%;
        transition: all 500ms;
    }

    @media only screen and (max-width: 1010px) {
        .navList {
            float: right;
            grid-row: 1 / 2;
        }

        .navLink {
            padding: var(--spacer-l);
        }
    }

</style>
