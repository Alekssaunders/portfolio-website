---
import Layout from '../layouts/Layout.astro';
import CSS from './index.module.css';
import {Image} from 'astro:assets';
import linkedinIcon from "../assets/linkedinIcon.svg";
import githubIcon from "../assets/githubIcon.svg";
import NavBar from "../components/NavBar.astro"

const languages: string[] = ['Typescript', 'Python', 'Bash']

const frameworks: string[] = ['React', 'Django', 'Node']

const libraries: string[] = ['Vite', 'Vitest', 'Jest', 'Mocha', 'Tailwind']
---


<Layout title="Aleks Saunders Portfolio">
    <main>
        <div className={CSS.contentContainer} class="contentContainer">
            <div className={CSS.pageDividerContainer} class="pageDivider">
                <NavBar/>
            </div>
            <div className={CSS.headerContainer} class="header">
                <h1 className={CSS.title}>hello.</h1>
                <h2 className={CSS.subtitle}>my name is aleks.</h2>
            </div>
            <div className={CSS.mainContentContainer}>
                <div className={CSS.textBox}>
                    <div className={CSS.pixelArtContainer} class="pixelArt"></div>
                    <p className={CSS.textBoxContent}>
                        Hey there! I'm Aleks and I'm a full-stack engineer from London, UK.<br><br>
                        I enjoy creating [...... ....... ......] designs and [...... ...... .......]<br><br>
                        <!--With two degrees in psychology and a background in scientific research, I'm always on the hunt-->
                        <!--to learn more. <br><br>-->
                        <!--Software engineering first caught my eye from a data analysis angle, and evolved-->
                        <!--to become a love of just making things.-->
                        <!--<br><br>-->

                        Oh, and I have cute dog called Mason.</p>
                    <div className={CSS.iconContainer}>
                        <Image src={linkedinIcon} alt="LinkedIn Icon" height="35vh" width="35vw"/>
                        <Image src={githubIcon} alt="Github Icon" height="35vh" width="35vw"/>
                    </div>
                </div>
                <div className={CSS.skillsBox}>
                    <div className={CSS.column}>
                        <p className={CSS.skillSubtitle}>Languages</p>
                        {languages.map((languages: string) => (
                                <ul className={CSS.skillListContainer}>
                                    <li className={CSS.skillList}>{languages}</li>
                                </ul>
                        ))}
                        <p className={CSS.skillSubtitle}>Frameworks</p>
                        {frameworks.map((frameworks: string) => (
                                <ul className={CSS.skillListContainer}>
                                    <li className={CSS.skillList}>{frameworks}</li>
                                </ul>
                        ))}
                    </div>
                    <div className={CSS.column}>
                        <p className={CSS.skillSubtitle}>Libraries</p>
                        {libraries.map((libraries: string) => (
                                <ul className={CSS.skillListContainer}>
                                    <li className={CSS.skillList}>{libraries}</li>
                                </ul>
                        ))}
                    </div>
                </div>
            </div>
        </div>
    </main>
</Layout>